@model PancakeViewModel

<h3>Create new pancake</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="custom-control-label"></label>
                <input type="double" asp-for="Price" />
            </div>
            <div class="form-group">
                <label asp-for="IsOnPromotion" class="custom-control-label"></label>
                <input type="checkbox" asp-for="IsOnPromotion" />
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="custom-control-label"></label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Color" class="custom-control-label"></label>
                <input type="text" asp-for="Color" />
            </div>
            <div class="form-group">
                <label asp-for="HasProtein" class="custom-control-label"></label>
                <input type="checkbox" asp-for="HasProtein" />
            </div>
            <div class="form-group">
                <label asp-for="HasFruits" class="custom-control-label"></label>
                <input type="checkbox" asp-for="HasFruits" />
            </div>
            <div class="form-group">
                <label asp-for="HasSyrup" class="custom-control-label"></label>
                <input type="checkbox" asp-for="HasSyrup" />
            </div>
            <div class="form-group">
                <label asp-for="HasCandies" class="custom-control-label"></label>
                <input type="checkbox" asp-for="HasCandies" />
            </div>
            <div class="form-group">
                <label asp-for="HasWhippedCream" class="custom-control-label"></label>
                <input type="checkbox" asp-for="HasWhippedCream" />
            </div>
            <button type="submit" class="btn btn-outline-success">Create</button>
        </form>
    </div>
</div>