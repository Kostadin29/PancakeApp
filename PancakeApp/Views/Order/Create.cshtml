@model OrderViewModel


<h3>Create New Order:</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input type="text" asp-for="FullName" class="form-control" placeholder="ex. John Doe" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input type="text" asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PancakeShape" class="control-label"></label>
                @*creates select list with options where value is the value of the members and text is the name of the member of the enum*@
                <select class="form-control" asp-for="PancakeShape" asp-items="Html.GetEnumSelectList<PancakeShapeEnum>()"></select>
            </div>

            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" asp-items="@(new SelectList(ViewBag.Locations, "Id", "Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="PancakeId" class="control-label"></label>
                <select asp-for="PancakeId" asp-items="@(new SelectList(ViewBag.Pancakes, "Id", "Name"))" class="form-control selectPancakes"></select>
            </div>
            
            <div class="form-group">
                <input type="checkbox" asp-for="IsDelivered" class="form-check-input" />
                <label asp-for="IsDelivered" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-outline-success">Create</button>
        </form>
    </div>
</div>
