@model OrderViewModel

<h3>Edit Order</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="custom-control-label"></label>
                <input type="text" asp-for="FullName" class="form-control" placeholder="ex. John Doe" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="custom-control-label"></label>
                <input type="text" asp-for="Address" />
            </div>
            <div class="form-group">
                <label asp-for="PancakeShape" class="control-label"></label>
                <select class="form-control" asp-for="PancakeShape" asp-items="Html.GetEnumSelectList<PancakeShapeEnum>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" asp-items="@(new SelectList(ViewBag.Locations, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="PancakeId" class="control-label"></label>
                <select asp-for="PancakeId" asp-items="@(new SelectList(ViewBag.Pancakes, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="IsDelivered" class="custom-control-label"></label>
                <input type="checkbox" asp-for="IsDelivered" />
            </div>
            <button type="submit" class="btn btn-outline-success">Submit</button>
        </form>
    </div>
</div>